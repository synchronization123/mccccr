<div class="content">
    <h1>Welcome to the Tab Navigation</h1>
    <p>Click on any of the options in the sidebar to visit the respective pages.</p>
    <a id="redirectLink" class="btn" href="#" target="_blank" style="display: none;">Go to Selected Page</a>
</div>

<script>
    const urls = {
        'patch': 'https://example.com/patch',
        'crm': 'https://dojo.crm.com',  // Example URL with X-Frame-Options restriction
        'cst': 'https://example.com/cst',
        'stt': 'https://example.com/stt',
        'rdt': 'https://example.com/rdt',
        'hhj': 'https://example.com/hhj',
        'wss': 'https://example.com/wss'
    };

    function loadContent(tab) {
        const redirectLink = document.getElementById('redirectLink');
        redirectLink.style.display = 'inline-block';
        redirectLink.href = urls[tab];
        redirectLink.innerHTML = `Go to ${tab.toUpperCase()} Page`;
    }
</script>

