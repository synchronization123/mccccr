<body>

<div class="container">
    <h2 class="text-center mb-4">Engagements Dashboard</h2>
    
    <div class="d-flex justify-content-between mb-3">
        <button class="btn btn-primary" onclick="fetchEngagements()">Refresh Data</button>
        <input type="text" id="searchInput" class="search-box" placeholder="Search Engagements...">
    </div>

    <div class="loader">
        <div class="spinner-border text-primary" role="status"></div>
        <p>Loading engagements...</p>
    </div>

    <p class="error-message">Failed to fetch data. Ensure you are logged in.</p>

    <div class="table-container mt-3">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Version</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Lead</th>
                    <th>Product</th>
                </tr>
            </thead>
            <tbody id="engagementsTableBody">
                <tr><td colspan="8" class="text-center">Click "Refresh Data" to load engagements.</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script>
function fetchEngagements() {
    $(".loader").show();
    $(".error-message").hide();
    $("#engagementsTableBody").html("");

    fetch("https://dojo.crm.com/api/v2/engagements", { credentials: "include" })
    .then(response => {
        if (!response.ok) throw new Error("Network response was not ok");
        return response.json();
    })
    .then(data => {
        $(".loader").hide();
        let rows = "";
        if (data.results.length === 0) {
            rows = `<tr><td colspan="8" class="text-center">No engagements found.</td></tr>`;
        } else {
            data.results.forEach((item, index) => {
                rows += `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${item.name || 'N/A'}</td>
                        <td>${item.description || 'N/A'}</td>
                        <td>${item.version || 'N/A'}</td>
                        <td>${item.target_start || 'N/A'}</td>
                        <td>${item.target_end || 'N/A'}</td>
                        <td>${item.lead || 'N/A'}</td>
                        <td>${item.product || 'N/A'}</td>
                    </tr>
                `;
            });
        }
        $("#engagementsTableBody").html(rows);
    })
    .catch(error => {
        $(".loader").hide();
        $(".error-message").show();
    });
}

// Live search function
$(document).ready(function() {
    $("#searchInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#engagementsTableBody tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
        });
    });
});
</script>

</body>
</html>